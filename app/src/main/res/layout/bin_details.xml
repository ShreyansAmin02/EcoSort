<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/image2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:background="#D9D9D9"
        android:layout_margin="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#3A3A39"/>
    </LinearLayout>

    <TextView
        android:id="@+id/binType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bin Type: Recycle/Gneral/Glass"
        android:layout_margin="16dp"/>
    <TextView
        android:id="@+id/binCurrentCapacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Capacity: Empty"
        android:layout_margin="16dp"/>
    <TextView
        android:id="@+id/binLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bin Location: 177A Bleeker Street"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/reportBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F94141"
        android:text="Report" />

    <LinearLayout
        android:id="@+id/updelButtons"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:visibility="gone">
        <Button
            android:id="@+id/updateBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#6A994E"
            android:text="Update"
            android:layout_margin="5dp">

        </Button>
        <Button
            android:id="@+id/deleteBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#F94141"
            android:text="Delete"
            android:layout_margin="5dp">
        </Button>
    </LinearLayout>


</LinearLayout>
